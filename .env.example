# AfterDark Validation Kit - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Cloudflare Configuration
# ===========================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here
CLOUDFLARE_EMAIL=your_email@example.com

# ===========================================
# Neon Database Configuration
# ===========================================
NEON_API_KEY=your_neon_api_key_here
NEON_PROJECT_ID=your_project_id_here

# ===========================================
# Oracle Cloud (OCI) Configuration
# ===========================================
OCI_TENANCY_OCID=ocid1.tenancy.oc1..your_tenancy_ocid
OCI_USER_OCID=ocid1.user.oc1..your_user_ocid
OCI_FINGERPRINT=aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99
OCI_PRIVATE_KEY_PATH=/path/to/your/oci_api_key.pem
OCI_COMPARTMENT_OCID=ocid1.compartment.oc1..your_compartment_ocid
OCI_REGION=us-ashburn-1

# ===========================================
# AWS Configuration (Optional)
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ===========================================
# Database Configuration (Optional)
# ===========================================
DATABASE_URL=postgres://user:password@host:5432/database

# ===========================================
# Authentication (Optional)
# ===========================================
JWT_SECRET=your_jwt_secret_for_testing
