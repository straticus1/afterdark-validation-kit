{
  "name": "afterdark-validation-kit",
  "version": "1.0.0",
  "description": "Comprehensive infrastructure validation toolkit for AfterDark ecosystem",
  "main": "src/node/index.js",
  "type": "module",
  "scripts": {
    "test": "node src/node/runner.js --all",
    "test:api": "node src/node/runner.js --api",
    "test:security": "node src/node/runner.js --security",
    "test:cdn": "node src/node/runner.js --cdn",
    "test:database": "node src/node/runner.js --database",
    "test:sites": "node src/node/runner.js --sites",
    "import-keys": "node src/node/import-api.js",
    "report": "node src/node/reporter.js",
    "validate:all": "npm run test && python3 src/python/run_tests.py --all",
    "setup": "npm install && pip3 install -r requirements.txt"
  },
  "keywords": [
    "validation",
    "testing",
    "infrastructure",
    "api",
    "security",
    "cloudflare",
    "oracle-cloud",
    "neon"
  ],
  "author": "AfterDark Systems",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "glob": "^10.3.0",
    "inquirer": "^9.2.0",
    "jsonwebtoken": "^9.0.2",
    "ora": "^7.0.1",
    "puppeteer": "^21.6.0",
    "tough-cookie": "^4.1.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
