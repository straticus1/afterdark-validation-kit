    {"domain": "login.afterdarksys.com", "type": "auth", "priority": 1, "auth": "local", "loginPath": "/", "spa": true, "framework": "nodejs", "healthCheck": "/health", "port": 3001},
    {"domain": "n8nworkflo.ws", "type": "n8n", "priority": 1, "project": "n8nworkflo.ws", "auth": "local", "loginPath": "/signin", "spa": true, "thirdParty": true},
